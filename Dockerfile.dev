# Development Dockerfile
FROM node:20-alpine

# Install pnpm
RUN npm install -g pnpm

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install all dependencies (including dev dependencies)
RUN pnpm install

# Expose port
EXPOSE 2000

# Default command (can be overridden in docker-compose)
CMD ["pnpm", "start:dev"]

