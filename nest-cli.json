{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../generated/**/*",
        "outDir": "dist/generated"
      },
      {
        "include": "templates/**/*.hbs",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}
